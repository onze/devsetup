# don't put duplicate lines or lines starting with space in the history.
# See bash(1) for more options
HISTCONTROL=ignoreboth

# append to the history file, don't overwrite it
shopt -s histappend

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=-1
HISTFILESIZE=-1

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

# If set, the pattern "**" used in a pathname expansion context will
# match all files and zero or more directories and subdirectories.
shopt -s globstar

PS1='\[\033[01;32m\]\u@\h\[\033[00m\]: \[\033[01;34m\]\w\[\033[00m\] \$'
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# goes in pair with /proc/sys/kernel/core_pattern containing /tmp/core.%E.%p.%t.%s
ulimit -c unlimited

# ssh key
# https://unix.stackexchange.com/questions/90853/how-can-i-run-ssh-add-automatically-without-a-password-prompt
# see ~/.bash_profile

export PATH=".:${PATH}"
export PATH=$PATH:~/.local/bin
export PATH=$PATH:~/local/bin

# common unix
alias chmox='chmod +x'

# one letter shortcuts
alias g='egrep'
alias st='stat'
alias ..='cd ..'
alias rm='trash'
alias m12='make -j12'
alias m='make -j12'
alias n='ninja -j12'
alias d='docker'

# kill
alias k9='kill -9'
alias k15='kill -15'

# apt
alias i='sudo apt install -y'
alias r='sudo apt remove'
alias s='apt-cache search'
alias update='sudo apt update'
alias upgrade='sudo apt upgrade'
alias distupgrade='sudo apt-get full-upgrade'
alias autoremove='sudo apt-get autoremove'
alias purge='sudo apt-get purge'
alias show='apt-cache show'
alias list='dpkg-query -L'
alias apt-origin='apt-file search'

# python
alias py='python3'
alias python='python3'
alias ipy='ipython3'
alias opensimplehttpserver='python3 -m http.server 8000'
alias opensimpleftpserver='python3 -m pyftpdlib'
alias rmpyc='find . -name "*.pyc" -exec rm -rf {} \;'

# git aliases
alias ga='git add'
alias gap='git add -p'
alias gb='git branch'
alias gc='git commit'
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gds='git diff --staged'
alias gl='git log --graph --decorate=auto --branches'
alias gp='git push'
alias grc='git rebase --continue'
alias grh='git reset HEAD'
alias grs='git rebase --skip'
alias gs='git status'
alias gsec='git secret'
# devops
# terraform is an executable shell script containing
# docker run -i -t hashicorp/terraform:light $@
alias tf=terraform
alias tg=terragrunt

# dev
alias d=docker
alias dc=docker-compose

cdmkdir()
{
    mkdir -p -- "$1" && cd -P -- "$1"
}
removebom()
{
    input_file=$1
    output_file=$1.nobom
    sed '1s/^\xEF\xBB\xBF//' < ${input_file} > ${output_file}
}
